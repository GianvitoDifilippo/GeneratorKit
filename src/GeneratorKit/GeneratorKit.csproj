<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <LangVersion>latest</LangVersion>
    <Nullable>enable</Nullable>
    <Authors>Gianvito Difilippo</Authors>
    <Company />
    <Summary>A library to write C# source generators more easily.</Summary>
    <Description>A library to write C# source generators more easily.</Description>
    <PackageProjectUrl>https://github.com/GianvitoDifilippo/GeneratorKit</PackageProjectUrl>
    <RepositoryUrl>https://github.com/GianvitoDifilippo/GeneratorKit</RepositoryUrl>
    <PackageTags>source;generators;reflection;compile;</PackageTags>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageRequireLicenseAcceptance>True</PackageRequireLicenseAcceptance>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.CodeAnalysis.Common" Version="3.11.0" />
    <PackageReference Include="Microsoft.CodeAnalysis.CSharp" Version="3.11.0" />
    <PackageReference Include="System.Reflection.Emit" Version="4.7.0" />
  </ItemGroup>

</Project>
